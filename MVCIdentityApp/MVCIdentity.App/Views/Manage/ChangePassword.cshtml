@model MVCIdentity.Identity.Model.ChangePasswordViewModel
@{
    ViewBag.Title = "Trocar senha";
}

<div class="demo-cards mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-grid mdl-grid--no-spacing">
    <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
        <div class="mdl-card__title mdl-card--expand mdl-color--teal-300">
            <h2 class="mdl-card__title-text">Gerenciar conta</h2>
        </div>
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new {role = "form"}))
        {
        <div class="mdl-card__supporting-text mdl-color-text--grey-600">
            Trocar senha<br />
            @Html.AntiForgeryToken()
            <div class="mdl-card__supporting-text">
                <div class="mdl-textfield mdl-js-textfield" style="display: block;">
                    @Html.LabelFor(m => m.SenhaAtual, new { @class = "mdl-textfield__label" })
                    @Html.PasswordFor(m => m.SenhaAtual, new { @class = "mdl-textfield__input", required = "" })
                </div>
                <div class="mdl-textfield mdl-js-textfield" style="display: block;">
                    @Html.LabelFor(m => m.NovaSenha, new {@class = "mdl-textfield__label"})
                    @Html.PasswordFor(m => m.NovaSenha, new {@class = "mdl-textfield__input", required = ""})
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    @Html.LabelFor(m => m.ConfirmarNovaSenha, new {@class = "mdl-textfield__label"})
                    @Html.PasswordFor(m => m.ConfirmarNovaSenha, new {@class = "mdl-textfield__input", required = ""})
                </div>
            </div>
            <div class="mdl-card__actions mdl-card--border text-right">
                <!-- Accent-colored raised button with ripple -->
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
                    Trocar
                </button>
            </div>

        </div>
        }
    </div>
</div>