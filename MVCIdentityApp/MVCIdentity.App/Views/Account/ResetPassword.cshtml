@model MVCIdentity.Identity.Model.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}
<div class="mdl-card mdl-card-center mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
        <h4 class="mdl-card__title-text">Redefinir senha! &nbsp;<i class="material-icons">build</i></h4>
    </div>
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Code)
        <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield">
                @Html.LabelFor(m => m.Email, new { @class = "mdl-textfield__label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "mdl-textfield__input", @type = "email", required = "", @readonly = "" })
                <span class="mdl-textfield__error">E-mail inválido!</span>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                @Html.LabelFor(m => m.Senha, new { @class = "mdl-textfield__label" })
                @Html.TextBoxFor(m => m.Senha, new { @class = "mdl-textfield__input", @type = "password", required = "" })
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                @Html.LabelFor(m => m.ConfirmarSenha, new { @class = "mdl-textfield__label" })
                @Html.TextBoxFor(m => m.ConfirmarSenha, new { @class = "mdl-textfield__input", @type = "password", required = "" })
            </div>
        </div>
        <div class="mdl-card__actions mdl-card--border text-right">
            <!-- Accent-colored raised button with ripple -->
            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
                Salvar
            </button>
        </div>
    }
</div>

