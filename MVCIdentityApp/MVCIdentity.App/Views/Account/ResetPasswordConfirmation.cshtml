@{
    ViewBag.Title = "Reset password confirmation";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="mdl-card mdl-card-center mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
        <h4 class="mdl-card__title-text">Senha redefinida! &nbsp;<i class="material-icons">check_circle</i></h4>
    </div>
    <div class="mdl-card__supporting-text">
        <p>
            Sua senha foi redefinida! 
        </p>
        <p>Por favor clique @Html.ActionLink("aqui", "Login", "Account") para fazer o login.</p>
    </div>
</div>