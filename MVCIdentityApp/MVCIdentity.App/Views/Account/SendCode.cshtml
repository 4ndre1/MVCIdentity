@model MVCIdentity.Identity.Model.SendCodeViewModel
@{
    ViewBag.Title = "Enviar provider";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="mdl-card mdl-card-center mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">Verificar número</h2>
        </div>
        @using (Html.BeginForm("SendCode", "Account", new {ReturnUrl = Model.ReturnUrl}, FormMethod.Post, new {role = "form"}))
        {
            <div class="mdl-card__supporting-text">
                Escolha o tipo de envio para verificação.<br/>
                @Html.AntiForgeryToken()
                @Html.Hidden("lembrarMe", @Model.LembrarMe)
                <div class="mdl-card__supporting-text">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.DropDownListFor(model => model.ProviderSelecionado, Model.Providers, new {@class = "mdl-textfield__input"})
                        @Html.LabelFor(m => m.ProviderSelecionado, new { @class = "mdl-textfield__label" })
                    </div>
                </div>
            </div>
            <div class="mdl-card__actions mdl-card--border text-right">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
                    Enviar
                </button>
            </div>
        }
</div>

