@model MVCIdentity.Identity.Model.VerifyCodeViewModel
@{
    ViewBag.Title = "Verificar código";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="mdl-card mdl-card-center mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">Verificar número</h2>
    </div>
    @using (Html.BeginForm("VerifyCode", "Account", new {ReturnUrl = Model.ReturnUrl}, FormMethod.Post, new {role = "form"}))
    {
        <div class="mdl-card__supporting-text">
            Por favor forneça o código enviado.<br/>
            @Html.AntiForgeryToken()
            @Html.Hidden("provider", Model.Provider)
            @Html.Hidden("lembrarMe", Model.LembrarMe)
            <div class="mdl-card__supporting-text">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(m => m.Code, new { @class = "mdl-textfield__label" })
                    @Html.TextBoxFor(m => m.Code, new { @class = "mdl-textfield__input", required = "" })
                </div>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="LembrarNavegador" style="display: inline;">
                    @Html.CheckBoxFor(m => m.LembrarNavegador, new { @class = "mdl-checkbox__input" })
                    <span class="mdl-checkbox__label">Lembrar este navegador?</span>
                </label>
            </div>
        </div>
        <div class="mdl-card__actions mdl-card--border text-right">
            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
                Enviar
            </button>
        </div>
    }
</div>
