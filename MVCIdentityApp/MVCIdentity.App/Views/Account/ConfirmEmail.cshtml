@{
    ViewBag.Title = "Confirmar Email";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="mdl-card mdl-card-center mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
        <h4 class="mdl-card__title-text">Confirmação concluída <i class="material-icons">check_circle</i></h4>
    </div>
    <div class="mdl-card__supporting-text">
        <p>
            Obrigado por confirmar seu email.
        </p>
        <p>Por favor @Html.ActionLink("Clique aqui para entrar no portal", "Index", "Home")</p>
    </div>    
</div>
