@{
    ViewBag.Title = "Confirmar Email";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="mdl-card mdl-card-center mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
        <h4 class="mdl-card__title-text">Confirmação concluída</h4>
    </div>
    <div class="mdl-card__supporting-text">
        <p class="mdl-typography--title" style="margin-bottom: 5px">
            Obrigado por confirmar seu email.
        </p>
        <p class="mdl-typography--title">Por favor @Html.ActionLink("Clique aqui para entrar no portal", "Index", "Home")</p>
    </div>    
</div>
